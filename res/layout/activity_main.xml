<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ResultActivity" >

    <TextView
        android:id="@+id/textview_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/text_value" />

    <EditText
        android:id="@+id/editor_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_desc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp" />

    <Button
        android:id="@+id/button_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editor_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:text="Change" />

    <Button
        android:id="@+id/button_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_change"
        android:layout_alignStart="@+id/button_change"
        android:layout_below="@+id/button_change"
        android:layout_marginTop="15dp"
        android:text="Service" />

    <Button
        android:id="@+id/button_shift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_service"
        android:layout_alignStart="@+id/button_service"
        android:layout_below="@+id/button_service"
        android:layout_marginTop="15dp"
        android:text="Shift_A" />

    <Button
        android:id="@+id/button_handler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_shift"
        android:layout_alignStart="@+id/button_shift"
        android:layout_below="@+id/button_shift"
        android:layout_marginTop="15dp"
        android:text="Handler" />

</RelativeLayout>